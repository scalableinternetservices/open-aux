<div class="form-wrapper">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: join_path) do |f| %>
        <%= f.label "Enter name" %>
        <%= f.text_field :userName, class: 'form-control', method: :post  %>

        <%= f.label "Room ID" %>
        <%= f.text_field :key, class: 'form-control', method: :post %><br>

        <%= f.submit "Join Room", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
